{
    "name": "armagangokce/arpay",
    "description": "Türk ödeme altyapıları için birleşik PHP ödeme kütüphanesi — PayTR, Iyzico, Vepara, ParamPos, iPara, Ödeal, Paynet, PayU, Papara",
    "type": "library",
    "license": "MIT",
    "keywords": ["payment", "turkey", "paytr", "iyzico", "vepara", "parampos", "ipara", "odeal", "paynet", "payu", "papara", "sanal-pos", "ödeme", "php", "gateway"],
    "homepage": "https://github.com/armagan-gkc/arpay",
    "authors": [
        {
            "name": "Armağan Gökce",
            "email": "ben@armagangokce.com",
            "homepage": "https://www.armagangokce.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/armagan-gkc/arpay/issues",
        "source": "https://github.com/armagan-gkc/arpay",
        "docs": "https://github.com/armagan-gkc/arpay#readme"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/armagan-gkc"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Arpay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arpay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "check": [
            "@test",
            "@analyse",
            "@cs-check"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
